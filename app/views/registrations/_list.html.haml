%table{:id => 'registrations', :class => 'list'}
  %thead
    %tr
      %th= t('registration.id')
      %th= t('registration.name')
      %th= t('registration.created_at')
      %th= t('registration.unit') 
      %th= t('registration.cpf')
      %th= t('registration.email')
      %th= t('registration.disabilities')
      %th= t('registration.employee_id') 
      %th
      %th
  %tbody
    - registrations.each do |registration|
      %tr
        %td{:style=> "width:40px;"}= registration.id
        %td{:style=> "width:60px; float:left;"}= registration.name
        - if !registration.created_at.nil?
          %td= registration.created_at.strftime("%d/%m/%Y") 
        - else
          %td
        
        %td{:style=> "width:100px; float:left;"}= registration.unit 
        %td{:style=> "width:130px;"}= registration.cpf
        %td{:style=> "width:180px;float:left"}= registration.email
        - if registration.disabilities.blank?
          %td Não
        - elsif registration.disabilities == true
          %td Sim
        %td= registration.employee_id
        %td= link_to t('show'), registration
        %td= link_to t('edit'), edit_registration_path(:id => registration.id)