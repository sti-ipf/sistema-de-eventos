.white-box-top
.white-box-container
  .content
    .button_div{:style => 'width: 60px;'}
      = link_to t('back'), root_path

    .button_div{:style => 'width: 60px; float:right;'}  
      = link_to 'Exportar', papers_path(:format => :csv)
    %br
    %br
    %h1= t('paper.list')
    %br
    - if @papers.count > 0
      %table{:id => 'papers', :class => 'list'}
        %thead
          %tr
            %th= t('paper.title')
            %th= t('paper.author')
            %th= t('paper.coauthor')
            %th= t('paper.culture_circle')
            %th= t('paper.created_at')
            %th
            %th
            %th
            %th
            
        %tbody
          - @papers.each do |paper|
            %tr
              %td{:style => 'width: 160px;'}= paper.title
              %td{:style => 'width: 160px;'}= paper.author
              %td{:style => 'width: 160px; float:left;'}= paper.coauthor
              %td= paper.culture_circle_to_s
              %td= paper.created_at.try(:strftime, "%d/%m/%Y %H:%M")
              %td
                %div{:id => "status_bt_#{paper.id}"}
                  = generate_status_button(paper)
              %td= link_to t('download'), "http://inscricao.paulofreire.org#{paper.artefact.url}"
              %td= link_to t('edit'), edit_paper_path(:id => paper.id)
              %td= link_to t('destroy'), paper_destroy_path(:id => paper.id)
        
      %br
    - else
      Não há trabalhos enviados ainda.

